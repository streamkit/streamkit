<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>media-center-bundles</artifactId>
        <groupId>org.mediacenter</groupId>
        <version>1.5-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <artifactId>authentication</artifactId>
    <version>1.5</version>
    <packaging>bundle</packaging>

    <name>Media Center Authentication</name>
    <description>
        This bundle is a fragment attached to the Sling FormAuth bundle and provides
        a simple customized login form.
    </description>

    <properties>
        <git.repo>http://${git.username}:${git.password}@git.crestin.tv/media_center_bundles/authentication.git</git.repo>
    </properties>

    <scm>
        <connection>scm:git:${git.repo}</connection>
        <developerConnection>scm:git:${git.repo}</developerConnection>
    </scm>

    <profiles>
        <profile>
            <id>push-subtree</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <configuration>
                            <workingDirectory>../../</workingDirectory>
                            <executable>git</executable>
                            <arguments>
                                <argument>subtree</argument>
                                <argument>push</argument>
                                <argument>--prefix=bundles/authentication</argument>
                                <argument>${git.repo}</argument>
                                <argument>master</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <!-- Bundling the project -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Fragment-Host>org.apache.sling.auth.selector</Fragment-Host>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>