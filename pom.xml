    <build>
        <!-- Add new java source dir, required for OSGI JUnit tests -->
        <resources>
            <resource>
                <directory>src/junit/java</directory>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>

        <plugins>

            <!-- Compile sources for OSGI JUnit tests -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals><goal>add-source</goal></goals>
                        <configuration>
                            <sources>
                                <source>src/junit/java</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>


      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-scr-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>

            <Export-Package>
                org.apache.sling.service.postprocessing.*
            </Export-Package>

            <Sling-Test-Regexp>
                .*Test
            </Sling-Test-Regexp>

            <Sling-Initial-Content>
                SLING-INF;overwrite:=false
            </Sling-Initial-Content>

          </instructions>
        </configuration>
      </plugin>
    </plugins>

  </build>

